  "keywords": [
    "bun",
    "plugin",
    "typescript",
    "dts",
    "declaration"
  ],
  "author": "",
  "license": "MIT",
  "homepage": "https://github.com/shtse8/bun-plugin-dts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shtse8/bun-plugin-dts.git"
  },
  "bugs": {
    "url": "https://github.com/shtse8/bun-plugin-dts/issues"
  },
  "private": false,
  "devDependencies": {
    "@types/bun": "^1.2.8"
  },
  "dependencies": {
    "typescript": "^5.8.2"
  }
}