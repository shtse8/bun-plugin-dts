{
  "name": "@shtse8/bun-plugin-dts",
  "version": "0.1.2",
  "description": "A Bun plugin to generate TypeScript declaration files (.d.ts) during build.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
